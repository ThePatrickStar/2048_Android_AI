<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:paddingTop="@dimen/margin_whole_screen"
    android:paddingBottom="@dimen/margin_whole_screen"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/rl_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:textColor="@color/md_red_300"
            android:text="@string/title_player_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_refresh"
            android:src="@drawable/ic_refresh_white_24dp"
            android:layout_width="@dimen/size_touchable"
            android:layout_height="@dimen/size_touchable"
            android:background="@drawable/bg_button"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tv_score"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_between_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_undo"
            android:src="@drawable/ic_undo_white_24dp"
            android:layout_width="@dimen/size_touchable"
            android:layout_height="@dimen/size_touchable"
            android:background="@drawable/bg_button"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


